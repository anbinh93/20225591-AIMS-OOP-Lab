<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<?import javafx.scene.layout.AnchorPane?>
<AnchorPane style="-fx-border-color: black;" xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="hust.soict.hedspi.aims.screen.customer.controller.ItemController">    <children>

    <VBox alignment="CENTER" prefHeight="175.0" prefWidth="305.0" spacing="10.0" style="-fx-background-color: #f4f4f4; -fx-padding: 10;">
            <children>
                <Label fx:id="lblTitle" alignment="CENTER" lineSpacing="20.0"
                       prefHeight="50.0" prefWidth="305.0" text="Title"
                       style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                <Label fx:id="lblCost" alignment="CENTER" lineSpacing="20.0"
                       prefHeight="50.0" prefWidth="305.0" text="Cost"
                       style="-fx-font-size: 14px;" />
                <HBox alignment="CENTER" spacing="15.0" prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <Button fx:id="btnAddToCart" mnemonicParsing="false"
                                onAction="#btnViewCartPressed" prefHeight="50.0"
                                prefWidth="140.0" text="Add to Cart"
                                style="-fx-background-color: #ffcc00; -fx-font-size: 14px;" />
                        <Button fx:id="btnPlay" mnemonicParsing="false"
                                onAction="#btnPlayClicked" prefHeight="50.0"
                                prefWidth="140.0" text="Play"
                                style="-fx-background-color: #4caf50; -fx-text-fill: white; -fx-font-size: 14px;" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
